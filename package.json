{
  "name": "claude-code-acp",
  "version": "0.1.1",
  "description": "Claude Code agent for Zed Editor via Agent Client Protocol",
  "main": "dist/index.js",
  "bin": {
    "cc-acp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --minify",
    "build:dev": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --sourcemap",
    "dev": "npm run build:dev -- --watch",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run test && npm run build",
    "release": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish"
  },
  "keywords": [
    "claude",
    "ai",
    "assistant",
    "zed",
    "editor",
    "acp",
    "agent-client-protocol",
    "anthropic",
    "code-assistant",
    "development-tools"
  ],
  "author": "Carl Rannaberg",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carlrannaberg/cc-acp.git"
  },
  "bugs": {
    "url": "https://github.com/carlrannaberg/cc-acp/issues"
  },
  "homepage": "https://github.com/carlrannaberg/cc-acp#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "commonjs",
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.96",
    "@zed-industries/agent-client-protocol": "^0.1.2",
    "fast-glob": "^3.3.3",
    "glob": "^11.0.3",
    "ignore": "^7.0.5",
    "lru-cache": "^11.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^18.19.123",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.0.0",
    "jest": "^30.1.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  }
}
